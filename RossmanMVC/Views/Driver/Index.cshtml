@model IEnumerable<Repository.Database_Layer.Driver>
@using RossmanMVC.Properties
@{
    ViewBag.Title = Resources.driverList;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(Resources.create, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.drivingLicenceNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.drivingLicenceDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.drivingLicenceNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.drivingLicenceDate)
        </td>
        <td>
            @Html.ActionLink(Resources.edit, "Edit", new { id=item.id }) |
            @Html.ActionLink(Resources.details, "Details", new { id=item.id }) |
            @Html.ActionLink(Resources.delete, "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
